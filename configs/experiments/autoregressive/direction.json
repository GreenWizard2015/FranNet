{
  "experiment": {
    "title": "Autoregressive restorator (direction)",
    "description": "Autoregressive restorators that predict the direction towards the target"
  },
  "model": {
    "restorator": {
      "inherit": "configs/models/restorator/autoregressive.json",
      "sampler": {
        "threshold": 0.001, 
        "steps": {
            "start": 1.0,
            "end": 0.001,
            "steps": 100,
            "decay": 0.9
        },
        "interpolant": {
            "name": "direction"
        }
      }
    }
  }
}